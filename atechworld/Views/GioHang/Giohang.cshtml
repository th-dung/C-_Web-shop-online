@using atechworld.Models
@model List<Giohang>

@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutTB.cshtml";
}
<style>
    .dathang a
    {
        color: black;
    }
    .xoa a
    {
        color: black;
    }
</style>


<h2 style="text-align: center; margin: 48px 0 18px;">THÔNG TIN GIỎ HÀNG CỦA BẠN</h2>
<table border="1" align="center">
    <tr style="text-align: center; font-weight: 700;">
        <td>Mã Sản Phẩm</td>
        <td>Tên Sản Phẩm</td>
        <td>Hình Ảnh</td>
        <td>Số Lượng</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align: center;">
            <td>@item.iMadt</td>
            <td>@item.sTendt</td>
            <td><img src="~/product_img/@item.sAnhbia"  style="width: 40%;"/></td>
            @using (Html.BeginForm("Capnhatgiohang", "Giohang", new { @iMaSP = item.iMadt }))
            {
                <td><input type="number" min="1" name="txtSoluong" value="@item.iSoluong"/></td>
                <td>@string.Format("{0:0,0}", item.dDongia)</td>
                <td>@string.Format("{0:0,0}", item.dThanhtien)</td>
                <td><a href="@Url.Action("Details", "atechworld", new { id = item.iMadt })" style="color: black;">Chi Tiết</a></td>
                <td class="xoa">@Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSP = item.iMadt })</td>
                <td><input type="submit" value="Cập Nhật"/></td>
            }
        </tr>
    }
    <tr style="text-align: center; font-weight:bold; color: orangered;">
        <td colspan="4">Tổng Số Lượng Sản Phẩm: @ViewBag.Tongsoluong</td>
        <td colspan="5">Tổng Thanh Toán: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="text-align: center; font-weight:bold; color: orangered;">
        <td colspan="9" class="dathang">@Html.ActionLink("Đặt Hàng", "Dathang", "Giohang")</td>
    </tr>
</table>

