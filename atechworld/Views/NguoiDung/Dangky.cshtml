
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutTB.cshtml";
}
<h3 style="text-align:center; color: black;">ĐĂNG KÝ</h3>
<table align="center">
    
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px;border-radius: 5px;">
            <td>
                Họ Tên Khách Hàng:
            </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["loi1"]
            </td>
        </tr>
        <tr>
            <td>
                Tên Đăng Ký:
            </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Mật Khẩu:
            </td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["loi3"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Xác Nhận Mật Khẩu:
            </td>
            <td>
                @Html.Password("XNMatKhau")
                @ViewData["loi4"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Email:
            </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["loi5"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Điện Thoại:
            </td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["loi6"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Địa Chỉ:
            </td>
            <td>
                @Html.TextBox("DiaChi")
                @ViewData["loi7"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                Ngày Sinh:
            </td>
            <td>
                <input type="date" name="NgaySinh" />
            </td>
        </tr>
        <tr style="height: 40px">
            <td>

            </td>
            <td>
                <input type="submit" name="Đăng Ký" />
            </td>
        </tr>
    }
</table>
